<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateOneAnswerQuestionActivity">

    <include
        android:id="@+id/toolbarQuestion"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/mainLayout"
        app:layout_constraintTop_toBottomOf="@id/toolbarQuestion"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/answer1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №1"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №2"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №3"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №4"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №5"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №6"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />
    </LinearLayout>

    <EditText
        android:id="@+id/question_answer"
        app:layout_constraintTop_toBottomOf="@id/mainLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:hint="Правильный ответ"
        android:background="@drawable/edit_text_background_answer"/>

    <Button
        android:id="@+id/button_create_question"
        style="@style/Button.Positive.Variant"
        app:layout_constraintTop_toBottomOf="@id/question_answer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="270dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Подтвердить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_exit"
        style="@style/Button.Negative.Variant"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/question_answer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Отмена"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>