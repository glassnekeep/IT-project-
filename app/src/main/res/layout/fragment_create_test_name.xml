<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_test_name_fragment"
    android:orientation="vertical"
    tools:context=".CreateTestNameFragment">

    <EditText
        android:id="@+id/edit_text_test_name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="40dp"
        android:paddingStart="10dp"
        android:hint="Название теста"
        android:background="@drawable/edit_text_background"/>

    <Button
        android:id="@+id/button_commit_create_test_name"
        style="@style/Button.Positive.Variant"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="245dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Подтвердить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_exit_create_test_name"
        style="@style/Button.Negative.Variant"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Отмена"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

</FrameLayout>