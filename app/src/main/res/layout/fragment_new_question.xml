<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_new_question_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewQuestionFragment">

        <EditText
            android:id="@+id/edit_text_question_name"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            android:hint="Текст вопроса"
            android:background="@drawable/edit_text_background"/>


    <Spinner
        android:id="@+id/spinner_answer_type"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:entries="@array/answerTypes"
        android:background="@drawable/spinner_background"/>

    <Spinner
        android:id="@+id/spinner_answer_number"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="305dp"
        android:paddingStart="16dp"
        android:entries="@array/answerNumber"
        android:background="@drawable/spinner_background" />

    <Button
        android:id="@+id/button_create_question"
        style="@style/Button.Positive.Variant"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="245dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Подтвердить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_exit"
        style="@style/Button.Negative.Variant"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Отмена"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />


</FrameLayout>