<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateComparisonQuestionActivity">

    <include
        android:id="@+id/toolbarQuestion"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/mainLayout"
            app:layout_constraintTop_toBottomOf="@id/toolbarQuestion"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/firstPartOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/toolbarQuestion"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/textFirstPartOne"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №1"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <Spinner
                    android:id="@+id/spinnerPartOne"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/answerNumber"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstPartTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/firstPartOne"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/textFirstPartTwo"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №2"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <Spinner
                    android:id="@+id/spinnerPartTwo"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/answerNumber"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstPartThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/firstPartTwo"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/textFirstPartThree"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №3"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <Spinner
                    android:id="@+id/spinnerPartThree"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/answerNumber"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstPartFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/firstPartThree"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/textFirstPartFour"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №4"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <Spinner
                    android:id="@+id/spinnerPartFour"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/answerNumber"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstPartFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/firstPartFour"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/textFirstPartFive"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №5"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <Spinner
                    android:id="@+id/spinnerPartFive"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/answerNumber"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstPartSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/firstPartFive"
                app:layout_constraintStart_toStartOf="parent">
                <EditText
                    android:id="@+id/textFirstPartSix"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №6"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <Spinner
                    android:id="@+id/spinnerPartSix"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/answerNumber"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>
        </LinearLayout>

    <View
        android:id="@+id/separator"
        style="@style/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainLayout" />


    <LinearLayout
        android:id="@+id/secondLayout"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/secondPartOne"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Вторая часть №1"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/secondPartTwo"
            app:layout_constraintTop_toBottomOf="@id/secondPartOne"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Вторая часть №2"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/secondPartThree"
            app:layout_constraintTop_toBottomOf="@id/secondPartTwo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Вторая часть №3"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/secondPartFour"
            app:layout_constraintTop_toBottomOf="@id/secondPartThree"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Вторая часть №4"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/secondPartFive"
            app:layout_constraintTop_toBottomOf="@id/secondPartFour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Вторая часть №5"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/secondPartSix"
            app:layout_constraintTop_toBottomOf="@id/secondPartFive"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Вторая часть №6"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />
    </LinearLayout>

    <Button
        android:id="@+id/button_create_question"
        style="@style/Button.Positive.Variant"
        app:layout_constraintTop_toBottomOf="@id/secondLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="270dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Подтвердить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_exit"
        style="@style/Button.Negative.Variant"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/secondLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="#E3BFE3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Отмена"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>