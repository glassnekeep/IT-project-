<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.questionFragments.ComparisonAnswerQuestionTestFragment">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/questionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вопрос"
            android:textSize="24dp"
            android:paddingStart="6dp"
            android:textAppearance="?attr/textAppearanceHeadline5" />

        <LinearLayout
            android:id="@+id/firstPartOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/textFirstPartOne"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №1"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />

                <TextView
                    android:layout_toRightOf="@id/textFirstPartOne"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:textSize="24dp"
                    android:text="A"
                    android:gravity="center"
                    android:background="@drawable/edit_text_background" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPartTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/textFirstPartTwo"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №2"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />
                <TextView
                    android:layout_toRightOf="@id/textFirstPartTwo"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="40dp"
                    android:textSize="24dp"
                    android:text="B"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_background" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPartThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/textFirstPartThree"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №3"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />
                <TextView
                    android:layout_toRightOf="@id/textFirstPartThree"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="40dp"
                    android:textSize="24dp"
                    android:text="C"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_background" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPartFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/textFirstPartFour"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №4"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />
                <TextView
                    android:layout_toRightOf="@id/textFirstPartFour"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="40dp"
                    android:textSize="24dp"
                    android:text="D"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_background" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPartFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/textFirstPartFive"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №5"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />
                <TextView
                    android:layout_toRightOf="@id/textFirstPartFive"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="40dp"
                    android:textSize="24dp"
                    android:text="E"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_background" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPartSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/textFirstPartSix"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="10dp"
                    android:hint="Первая часть №6"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_background" />
                <TextView
                    android:layout_toRightOf="@id/textFirstPartSix"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="40dp"
                    android:textSize="24dp"
                    android:text="F"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_background" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/separator"
            style="@style/separator" />


        <LinearLayout
            android:id="@+id/secondLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/secondPartOne"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Вторая часть №1"
                android:textSize="24dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:id="@+id/secondPartTwo"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Вторая часть №2"
                android:textSize="24dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:id="@+id/secondPartThree"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Вторая часть №3"
                android:textSize="24dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:id="@+id/secondPartFour"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Вторая часть №4"
                android:textSize="24dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:id="@+id/secondPartFive"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Вторая часть №5"
                android:textSize="24dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:id="@+id/secondPartSix"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Вторая часть №6"
                android:textSize="24dp"
                android:background="@drawable/edit_text_background" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/question_answer"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:hint="Правильный ответ"
                android:background="@drawable/edit_text_background_answer"/>
            <TextView
                android:id="@+id/saved"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="14dp"
                android:text=""
                android:textColor="#20CD0D"
                android:gravity="center"
                android:layout_width="140dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSaveOneAnswer"
            style="@style/Button.Positive.Variant"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:shadowColor="#E3BFE3"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</FrameLayout>