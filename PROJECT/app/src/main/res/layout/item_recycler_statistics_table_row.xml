<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statistics_table_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/subjectStatistics"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Предмет"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="180dp"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view1"
        app:layout_constraintStart_toEndOf="@id/subjectStatistics"
        app:layout_constraintTop_toTopOf="@id/subjectStatistics"
        style="@style/smallVerticalSeparator" />

    <TextView
        android:id="@+id/numberTests"
        app:layout_constraintTop_toTopOf="@id/subjectStatistics"
        app:layout_constraintStart_toEndOf="@id/view1"
        android:text="Кол-во тестов."
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view2"
        app:layout_constraintTop_toTopOf="@id/subjectStatistics"
        app:layout_constraintStart_toEndOf="@id/numberTests"
        style="@style/smallVerticalSeparator" />
    <TextView
        android:id="@+id/avgPerCent"
        app:layout_constraintTop_toTopOf="@id/subjectStatistics"
        app:layout_constraintStart_toEndOf="@id/view2"
        android:text="Верный ответ"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view3"
        app:layout_constraintTop_toTopOf="@id/subjectStatistics"
        app:layout_constraintStart_toEndOf="@id/avgPerCent"
        style="@style/smallVerticalSeparator" />
    <TextView
        android:id="@+id/avgGrade"
        app:layout_constraintTop_toTopOf="@id/subjectStatistics"
        app:layout_constraintStart_toEndOf="@id/view3"
        android:text="Бал"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view4"
        app:layout_constraintTop_toBottomOf="@id/subjectStatistics"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:background ="@color/gray"
        android:layout_height="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>