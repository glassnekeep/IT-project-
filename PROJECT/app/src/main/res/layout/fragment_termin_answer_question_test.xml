<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.questionFragments.TerminAnswerQuestionTestFragment">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/questionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вопрос"
            android:textSize="24dp"
            android:paddingStart="6dp"
            android:textAppearance="?attr/textAppearanceHeadline5" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №1"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №2"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №3"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №4"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №5"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/answer6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:hint="Ответ №6"
            android:textSize="24dp"
            android:background="@drawable/edit_text_background" />

        <TextView
            android:id="@+id/saved"
            android:layout_marginTop="10dp"
            android:layout_marginStart="220dp"
            android:textSize="14dp"
            android:text=""
            android:textColor="#20CD0D"
            android:gravity="center"
            android:layout_width="140dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/buttonSaveOneAnswer"
            style="@style/Button.Positive.Variant"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:shadowColor="#E3BFE3"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Сохранить"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</FrameLayout>